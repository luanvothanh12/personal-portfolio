---
import PageLayout from '@/layouts/BaseLayout.astro'
import { Image } from 'astro:assets'
import Button from '@/components/Button.astro'

const equipments = (await Astro.glob('../content/equipments/*.md')).sort(
	(a: any, b: any) =>
		new Date(b.frontmatter.createdAt).valueOf() - new Date(a.frontmatter.createdAt).valueOf()
)
---

<PageLayout meta={{ title: 'Uses' }}>
	<div class='w-full'>
		<Button title='Back' href='/' style='button'>
			<svg
				xmlns='http://www.w3.org/2000/svg'
				width='14'
				height='14'
				viewBox='0 0 24 24'
				slot='icon-before'
			>
				<path
					fill='currentColor'
					d='m6.921 12.5l5.792 5.792L12 19l-7-7l7-7l.713.708L6.921 11.5H19v1z'
				>
				</path>
			</svg>
		</Button>

		<div class='flex flex-col w-full mt-5 gap-y-10'>
			<div>
				<h1 class='mb-1 text-2xl font-bold'>Uses</h1>
				<p>Equipments I use</p>
			</div>

			<section>
				<ul class='grid grid-cols-1 gap-4 md:grid-cols-2'>
					{
						equipments.map((equipment) => (
							<li class='mb-4 text-center'>
								<a href={equipment.url}>
									<Image
										class='border rounded-xl border-slate-300 dark:border-zinc-700'
										src={equipment.frontmatter.heroImage}
										width={720 * 2}
										height={1280 * 2}
										alt='Thumbnail'
									/>
									<div class='mt-3 text-xl font-bold'>{equipment.frontmatter.title}</div>
									{equipment.frontmatter.description && (
										<div class='opacity-70'>{equipment.frontmatter.description}</div>
									)}
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</div>
	</div>
</PageLayout>
