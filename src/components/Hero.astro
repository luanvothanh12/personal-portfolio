---
interface Props {
	title: string
	tagline?: string
	align?: 'start' | 'center'
}

const { align = 'center', tagline, title } = Astro.props
---

<div class:list={['flex flex-col gap-4 text-center text-lg', align]}>
	<div class='flex flex-col gap-2'>
		<h1 class='text-3xl'>{title}</h1>
		{tagline && <p class='text-2xl'>{tagline}</p>}
	</div>
	<slot />
</div>
