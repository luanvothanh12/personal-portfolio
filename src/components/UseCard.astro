---
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

interface Props {
  equipment: CollectionEntry<'use'>
}

const {
  equipment: { id, data }
} = Astro.props

const { title, description, heroImage } = data
---

<li class='mb-4 text-center'>
  <a href={`/use/${id}`}>
    {
      heroImage && (
        <Image
          class='aspect-3/2 h-auto w-full rounded-xl border border-slate-300 object-cover dark:border-zinc-700'
          src={heroImage.src}
          alt={heroImage.alt}
          fetchpriority='high'
          loading='eager'
        />
      )
    }

    <div class='mt-3 text-xl font-bold'>{title}</div>
    <div class='opacity-70'>{description}</div>
  </a>
</li>
