---
import Card from '@/components/Card.astro'
import { technologies } from '@/site-config'
---

<div class='grid gap-6 md:grid-cols-2'>
  {
    technologies.map((tech) => (
      <Card key={tech.category} class='p-6'>
        <h3 class='mb-4 text-lg font-semibold'>{tech.category}</h3>
        <div class='flex flex-wrap gap-2'>
          {tech.skills.map((skill) => (
            <span class='bg-primary/10 text-primary ring-primary/20 inline-flex items-center rounded-md px-2 py-1 text-sm font-medium ring-1 ring-inset'>
              {skill}
            </span>
          ))}
        </div>
      </Card>
    ))
  }
</div>
