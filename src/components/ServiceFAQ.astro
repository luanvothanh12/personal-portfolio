---
interface FaqItem {
  question: string
  answer: string
}

const leftColumnFaqs: FaqItem[] = [
  {
    question: 'Can i request unlimited tasks ?',
    answer:
      'Yes, you can request as many tasks as needed within your project timeline. I manage the workflow to ensure timely delivery of all requests.'
  },
  {
    question: 'How is your working process like ?',
    answer: 'I work swiftly 9-5 and finish given tasks everyday.'
  },
  {
    question: 'Do you offer support after project completion?',
    answer:
      'Absolutely! I provide post-project support to ensure everything runs smoothly even after the final delivery.'
  }
]

const rightColumnFaqs: FaqItem[] = [
  {
    question: 'How do i track the project progress ?',
    answer: 'I will report everyday by 5 PM to ensure you are catching up with the progress.'
  },
  {
    question: "Don't know which package to choose",
    answer:
      'We can have a meeting to help you select the best package based on your specific needs, budget, and project requirements.'
  },
  {
    question: 'What is the features of packages includes?',
    answer: 'Daily reports, unlimited requests & unlimited revisions during the project timeline'
  }
]
---

<section class='mx-auto max-w-7xl px-4 py-8 md:px-6 lg:px-8'>
  <div class='mb-12 text-center'>
    <h2 class='mb-4 text-4xl font-bold md:text-5xl'>Have any questions?</h2>
    <p class='text-gray-600'>Let me answer the questions for you.</p>
  </div>

  <div class='grid gap-8 md:grid-cols-2'>
    <!-- Left Column -->
    <div class='space-y-4'>
      {
        leftColumnFaqs.map((faq) => (
          <details class='group border-b border-gray-200 pb-4'>
            <summary class='flex cursor-pointer list-none items-center justify-between'>
              <span class='text-xl font-medium'>{faq.question}</span>
              <svg
                class='h-6 w-6 transition-transform group-open:rotate-180'
                fill='none'
                stroke='currentColor'
                viewBox='0 0 24 24'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M19 9l-7 7-7-7'
                />
              </svg>
            </summary>
            <div class='mt-4 text-gray-600'>{faq.answer}</div>
          </details>
        ))
      }
    </div>

    <!-- Right Column -->
    <div class='space-y-4'>
      {
        rightColumnFaqs.map((faq) => (
          <details class='group border-b border-gray-200 pb-4'>
            <summary class='flex cursor-pointer list-none items-center justify-between'>
              <span class='text-xl font-medium'>{faq.question}</span>
              <svg
                class='h-6 w-6 transition-transform group-open:rotate-180'
                fill='none'
                stroke='currentColor'
                viewBox='0 0 24 24'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M19 9l-7 7-7-7'
                />
              </svg>
            </summary>
            <div class='mt-4 text-gray-600'>{faq.answer}</div>
          </details>
        ))
      }
    </div>
  </div>
</section>
