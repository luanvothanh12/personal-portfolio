---
import { Image } from 'astro:assets'

import type { CollectionEntry } from 'astro:content'

interface Props {
	project: CollectionEntry<'work'>
}

const { data, slug } = Astro.props.project
---

<a
	class='flex flex-col gap-y-3 rounded-2xl border border-border bg-primary-foreground transition-all hover:border-foreground/25 hover:shadow-sm'
	href={`/work/${slug}`}
>
	<Image
		width={720 * 2}
		height={1280 * 2}
		src={data.img}
		alt={data.img_alt}
		class='h-48 w-full rounded-2xl rounded-bl-none rounded-br-none object-cover'
		loading='eager'
	/>
	<div class='flex flex-col gap-y-0.5 px-5 py-4'>
		<h1 class='text-lg font-medium'>{data.heading}</h1>
		<h2 class='text-muted-foreground'>{data.subheading}</h2>
	</div>

	<slot />
</a>
